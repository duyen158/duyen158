@model Duyen158.Models.Person

<h2>Chỉnh sửa Person</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="ID">Căn cước công dân</label>
        <input type="number" class="form-control" name="CanCuocCongDan" value="@Model.ID" readonly />
    </div>
    <div class="form-group">
        <label for="Name">Họ tên</label>
        <input type="text" class="form-control" name="HoTen" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Hometown">Quê quán</label>
        <input type="text" class="form-control" name="QueQuan" value="@Model.Hometown" required />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
